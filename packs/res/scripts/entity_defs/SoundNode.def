<root>
	<Properties>
	
		<sounds>
			<Type> ARRAY <of>STRING</of> </Type>
			<Flags> ALL_CLIENTS </Flags>
			<Editable> true </Editable>
		</sounds>
		<playFrequency>
			<Type> FLOAT </Type>
			<Flags> ALL_CLIENTS </Flags>
			<Editable> true </Editable>
			<Default>0.0</Default>
		</playFrequency>
		
		<playOnce>
			<Type> BOOL </Type>
			<Flags> ALL_CLIENTS </Flags>
			<Editable> true </Editable>
			<Default>0</Default>
		</playOnce>
		
